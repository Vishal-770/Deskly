{
  "name": "deskly",
  "version": "0.1.0",
  "description": "Deskly - Your Desktop Companion",
  "author": "Deskly Team",
  "private": true,
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev:next": "next dev",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "dev": "concurrently -k \"npm run dev:next\" \"npm run dev:electron\"",
    "build": "next build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build:app": "npm run build:electron && npm run build && electron-builder",
    "build:win": "npm run build:electron && npm run build && electron-builder --win",
    "start": "next start",
    "lint": "eslint"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/postcss": "^4",
    "axios": "^1.13.2",
    "canvas": "^3.2.1",
    "cheerio": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-store": "^11.0.2",
    "keytar": "^7.9.0",
    "lucide-react": "^0.562.0",
    "next": "16.1.4",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "recharts": "^2.15.4",
    "systeminformation": "^5.30.5",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/keytar": "^4.4.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.deskly.app",
    "productName": "Deskly",
    "files": [
      "dist-electron/**/*",
      "out/**/*",
      "package.json",
      "node_modules/**/*",
      "assets/**/*"
    ],
    "asarUnpack": [
      "out/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/app-logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "extraMetadata": {
      "main": "dist-electron/main.js"
    },
    "npmRebuild": false
  }
}
